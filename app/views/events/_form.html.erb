<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :info %>
    <%= form.text_field :info %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="field">
    <%= form.label :time %>
    <%= form.time_field :time %>
  </div>
  
  <div class="field">
    <%= form.label :event_type %>
    <%= form.select :event_type, options_for_select(["Game", "Practice", "Tournament"]), value: nil %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :season %>
    <%= form.select :season, options_for_select(["7s", "15s"]), value: nil %>
  </div>
  <div class="field">
    <%= form.label :score %>
    <%= form.text_field :score %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
